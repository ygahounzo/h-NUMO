export P4EST_CONF = CC=mpicc CXX=mpicxx FC=mpif90 F77=mpif77  --enable-p6est --enable-mpi --enable-static --disable-shared

hnumo-config:
	$(eval P4EST_CONF = 	--enable-mpi \
	--enable-p6est\
	--without-blas \
	--disable-shared \
	CC=mpicc \
	CXX=mpicxx \
	F77=mpif90 \
	FC=mpif77 \
	CFLAGS="-O2 -Wall")
hnumo-debug-config:
	$(eval P4EST_CONF = 	--enable-mpi \
	--enable-p6est\
	--without-blas \
	--disable-shared \
	CC=mpicc \
	CXX=mpicxx \
	F77=mpif90 \
	FC=mpif77 \
	CFLAGS="-O2 -Wall")

hnumo-hamming-p4est-gcc7-config:
	$(eval P4EST_CONF += --without-blas)

hnumo-prof-config:
	$(eval P4EST_CONF = 	--enable-mpi \
	--enable-p6est\
	--without-blas \
	--disable-shared \
	CC=mpicc \
	CXX=mpicxx \
	F77=mpif90 \
	FC=mpif77 \
	CFLAGS="-O2 -Wall")

hnumo-brew-config:
 	$(eval P4EST_CONF += )
	
hnumo-brew-dbg-config:		 
 	$(eval P4EST_CONF += --enable-debug)
